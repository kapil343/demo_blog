<% if user_signed_in? %>
  <%= link_to "edit user", edit_user_registration_path, class: 'btn btn-sm btn-warning' %>
  <%= link_to "logout", destroy_user_session_path, data: {turbo_method: :delete}, class: 'btn btn-sm btn-danger' %>

  <h1>Articles</h1>

  <% @articles.each do |article| %>
    <div class="m-2 ">
      <ul class="list-group">
      <li class="list-group-item"><%= link_to article.title, article %></li>
      </ul>
    </div>
  <% end %>

  <% if current_user.has_role? :author %>
    <p><%= link_to "New Article", new_article_path , class: 'btn btn-sm btn-secondary text-dark' %></p>
  <% end %>
  
<% else %>
  <%= link_to "new user", new_user_registration_path, class: 'btn btn-sm btn-secondary text-dark mt-3' %>
  <%= link_to "login", new_user_session_path, class: 'btn btn-sm btn-secondary text-dark mt-3' %>
<% end %>
